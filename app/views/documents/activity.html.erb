<%= render :partial => "documents/header" %>
<%= render :partial => "documents/nav" %>

<table border="0" cellspacing="0" cellpadding="0" width="100%">
	<tr>
		
		<td valign="top">
			
			<% if logged_in? and params[:action] == 'discussions' %>
				<p>
				<%= render :partial => "bulletins/form", :locals => {:activity => Activity.new, :comment => Comment.new } %>				
			<% end %>
			
			<%= paginate(@activities) %>
			<p>
			<div id="activities">
			<% for activity in @activities %>
				<%= render :partial => "activities/show", :locals => {:activity => activity, :suffix => "_noself" }%>
			<% end %>
			</div>
			<p>
			<%= paginate(@activities) %>
			
		</td>	
		
		<td valign="top" width="150" style="padding-left: 20px;">
			<%= render :partial => "document_revisions/revisions" %>
		</td>		
	
	</tr>
</table>


